<section class="products-show">

  <header class="page-header">
    <h1><%= link_to @product.category.name, @product.category %> &raquo; <%= @product.name %></h1>
    <script>
      const ratingsField = document.querySelector('#ratings-hidden');
      document.querySelector('.starrr').on('starrr:change', function(e, value){
        ratingsField.val(value);
      });
    </script>
  </header>

  <article class="product-detail">

    <div class="row">

      <div class="col-sm-4">
        <%= image_tag @product.image.url, class: 'main-img' %>
      </div>

      <div class="col-sm-8">
        <dl class="dl-horizontal">
          <dt>Name</dt>
          <dd><%= @product.name %></dd>
          <dt>Description</dt>
          <dd><%= @product.description %></dd>
          <dt>Quantity</dt>
          <dd><%= @product.quantity %></dd>
          <dt>Price</dt>
          <dd><%= @product.price %></dd>
        </dl>
      </div>
    </div>

    <% if current_user %>
      <!-- <div class="row">
        <%= form_for [@product, @review] do |form| %>
          <div class="field">
            <%= form.label :rating %>
            <%= form.number_field :rating, id: :review_rating %>
          </div>

          <div class="field">
            <%= form.label :description %>
            <%= form.text_field :description, id: :review_description %>
          </div>

          <div class="actions">
            <%= form.submit %>
          </div>
        <% end %>
      </div> -->

      <div class="container">
        <div class="row" style="margin-top:40px;">
          <div class="col-md-6">
            <div class="well well-sm">
              <div class="row" id="post-review-box">
                <div class="col-md-12">
                  <%= form_for [@product, @review] do |form| %>
                    <%= form.text_area :description, id: :review_description, class: 'form-control animated', placeholder: 'Enter your review here...', cols: 50, rows: 5 %>
                    <div class="pull-left">
                      <%= form.label :rating %>
                      <%= form.number_field :rating, id: :review_rating, min: 1, max: 5 %>
                    </div>
                    <div class="pull-right">
                      <div class="stars starrr" data-rating="0"></div>
                      <%= form.submit 'Review', class: 'btn btn-success btn-lg' %>
                    </div>
                    <div class="clearfix"></div>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>



    <div class="row">
      <h3>Reviews</h3>
      <% @product.reviews.each do |review| %>
        <div><%= "#{review.user.name}: rated #{review.rating}.  #{review.description}" %></div>
        <% if current_user == review.user %>
          <%= link_to product_review_path(@product, review), data: {confirm: 'Delete this review?'}, class: 'btn btn-xs btn-danger', method: :delete do %>
          -
        <% end %>
        <% end %>
      <% end %>
    </div>

  </article>

</section>
